#jobs
  .job
    %h1= @task.title
    %p= @task.description
    %p= @task.company
    %button.btn.btn-default= link_to "Complete Task", @task.ulr

#links
  .btn.btn-sm.btn-default= link_to 'Home', root_path
  .btn.btn-sm.btn-default= link_to 'Edit', edit_task_path(@task)
  .btn.btn-sm.btn-default= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" }